<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://numeratorListView.title"
      focusComponent="numeratorsDataGrid">
    <data>
        <collection id="numeratorsDc"
                    class="com.company.orderprocessing.entity.Numerator">
            <fetchPlan extends="_base"/>
            <loader id="numeratorsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ord_Numerator e]]>
                </query>
            </loader>
        </collection>
        <instance id="numeratorDc"
                  class="com.company.orderprocessing.entity.Numerator">
            <fetchPlan extends="_base"/>
            <loader id="numeratorDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createButton" action="numeratorsDataGrid.create"/>
                    <button id="readButton" action="numeratorsDataGrid.read"/>
                    <simplePagination id="pagination" dataLoader="numeratorsDl"/>
                </hbox>
                <dataGrid id="numeratorsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="numeratorsDc">
                    <actions>
                        <action id="create" type="list_create"/>
                        <action id="read" type="list_read"/>
                    </actions>
                    <columns>
                        <column property="name"/>
                        <column property="number"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="numeratorDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="nameField" property="name"/>
                    <textField id="numberField" property="number"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
