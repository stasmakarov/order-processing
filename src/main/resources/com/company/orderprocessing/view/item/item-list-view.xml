<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://itemListView.title"
      focusComponent="itemsDataGrid">
    <data>
        <collection id="itemsDc"
                    class="com.company.orderprocessing.entity.Item">
            <fetchPlan extends="_base"/>
            <loader id="itemsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ord_Item e order by e.name]]>
                </query>
            </loader>
        </collection>
        <instance id="itemDc"
                  class="com.company.orderprocessing.entity.Item">
            <fetchPlan extends="_base"/>
            <loader id="itemDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout padding="false">
        <formLayout id="layoutWrapper" classNames="master-detail-layout" height="100%">
            <vbox id="listLayout" height="100%">
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <button id="createButton" action="itemsDataGrid.create"/>
                    <button id="editButton" action="itemsDataGrid.edit"/>
                    <button id="removeButton" action="itemsDataGrid.remove"/>
                    <button id="resetButton" text="Reset"/>
                    <simplePagination id="pagination" dataLoader="itemsDl"/>
                </hbox>
                <dataGrid id="itemsDataGrid"
                          width="100%"
                          minHeight="20em"
                          dataContainer="itemsDc"
                          columnReorderingAllowed="true">
                    <actions>
                        <action id="create" type="list_create"/>
                        <action id="edit" type="list_edit"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="name"/>
                        <column property="available"/>
                        <column property="reserved"/>
                        <column property="delivered"/>
                    </columns>
                </dataGrid>
            </vbox>
            <vbox id="detailsLayout" height="100%">
                <formLayout id="form" dataContainer="itemDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="nameField" property="name"/>
                    <textArea id="descriptionField" height="9.5em" property="description"/>
                    <textField id="totalQuantityField" property="available"/>
                    <textField id="reservedField" property="reserved"/>
                    <textField id="deliveredField" property="delivered"/>
                </formLayout>
                <hbox id="detailActions">
                    <button id="saveButton" text="msg:///actions.Save" icon="CHECK" themeNames="primary"/>
                    <button id="cancelButton" text="msg:///actions.Cancel" icon="BAN"/>
                </hbox>
            </vbox>
        </formLayout>
    </layout>
</view>
