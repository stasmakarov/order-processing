<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://demoView.title">
    <layout>
        <vbox>
            <h4 text="Read orders from RabbitMQ"/>
            <hbox>
                <button id="startReadingBtn" text="Start"/>
                <button id="stopReadingBtn" text="Stop"/>
            </hbox>
        </vbox>
        <vbox visible="false">
            <h4 text="msg://Manufacturing"/>
            <hbox>
                <button id="manufacturingStartBtn" text="Start"/>
                <button id="manufacturingPauseBtn" text="Pause"/>
                <button id="manufacturingResumeBtn" text="Resume"/>
                <button id="manufacturingStopBtn" text="Stop"/>
            </hbox>
        </vbox>
        <vbox>
            <h4 text="Delivery"/>
            <hbox>
                <textField id="instanceIdField" datatype="string" label="Order number"/>
                <textField id="eventNameField" datatype="string" label="Event Name" visible="false"/>
            </hbox>
            <button id="sendMessageBtn" text="Send Message"/>
        </vbox>
        <hbox visible="false">
            <textField id="targetExecutionField" datatype="string" label="Target Execution" />
        </hbox>
        <button id="findExecution" text="Find Execution" visible="false"/>
        <button id="allSubsBtn" text="All Subscriptions" visible="false"/>
        <button id="startById" text="Start by Def. Id" visible="false"/>
    </layout>
</view>