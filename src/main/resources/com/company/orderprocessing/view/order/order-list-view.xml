<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:maps="http://jmix.io/schema/maps/ui"
      title="msg://orderListView.title"
      focusComponent="ordersDataGrid">
    <data>
        <collection id="ordersDc"
                    class="com.company.orderprocessing.entity.Order">
            <fetchPlan extends="_base">
                <property name="item">
                    <property name="reserved"/>
                    <property name="delivered"/>
                </property>
                <property name="delivery" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="ordersDl" readOnly="true">
                <query>
                    <![CDATA[select e from ord_Order e order by e.number desc]]>
                </query>
            </loader>
        </collection>
        <keyValueCollection id="boundsDc">
            <properties>
                <property name="geometry" class="org.locationtech.jts.geom.Polygon"/>
            </properties>
        </keyValueCollection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination" maxResultsParam="1000"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <split id="split" width="100%" themeNames="splitter-spacing" splitterPosition="45">
            <vbox>
                <genericFilter id="genericFilter" opened="false" visible="false"
                               dataLoader="ordersDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <vbox>
                        <hbox>
                            <button id="editButton" action="ordersDataGrid.edit" visible="true"/>
                            <button id="cancelButton" text="msg://cancel.order"/>
                        </hbox>
                        <hbox>
                            <simplePagination id="pagination" visible="false"
                                              dataLoader="ordersDl"
                                              autoLoad="true"
                                              itemsPerPageUnlimitedItemVisible="true"
                                              itemsPerPageDefaultValue="1000"
                                              itemsPerPageVisible="false"/>
                        </hbox>
                    </vbox>
                </hbox>
                <dataGrid id="ordersDataGrid" pageSize="200"
                          allRowsVisible="true"
                          width="100%"
                          minHeight="33em"
                          dataContainer="ordersDc"
                          columnReorderingAllowed="true"
                          selectionMode="SINGLE">
                    <actions>
                        <action id="edit" type="list_edit"/>
                        <action id="refresh" type="list_refresh"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="number" width="3em"/>
                        <column property="status" width="3em"/>
                        <column property="address"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="mapBox" width="100%" height="100%">
                <maps:geoMap id="map" height="100%" width="100%">
                    <maps:layers>
                        <maps:tile>
                            <maps:osmSource/>
                        </maps:tile>
                        <maps:vector id="ordersLayer">
<!--                            <maps:cluster id="cluster">-->
                                <maps:dataVectorSource id="dataVectorSource1"
                                                       featureSelectEnabled="true"
                                                       dataContainer="ordersDc"
                                                       property="location"/>
<!--                            </maps:cluster>-->
                        </maps:vector>
                        <maps:vector id="boundsLayer">
                            <maps:dataVectorSource id="boundsSource"
                                                   dataContainer="boundsDc"
                                                   property="geometry"/>
                        </maps:vector>
                    </maps:layers>
                </maps:geoMap>
            </vbox>
        </split>
    </layout>
</view>
