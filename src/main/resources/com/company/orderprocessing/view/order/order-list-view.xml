<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:maps="http://jmix.io/schema/maps/ui"
      title="msg://orderListView.title"
      focusComponent="ordersDataGrid">
    <data>
        <collection id="ordersDc"
                    class="com.company.orderprocessing.entity.Order">
            <fetchPlan extends="_base">
                <property name="item" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="ordersDl" readOnly="true">
                <query>
                    <![CDATA[select e from ord_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination" maxResultsParam="1000"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <split id="split" width="100%" themeNames="splitter-spacing" splitterPosition="45">
            <vbox>
                <genericFilter id="genericFilter" opened="false"
                               dataLoader="ordersDl">
                    <properties include=".*"/>
                </genericFilter>
                <hbox id="buttonsPanel" classNames="buttons-panel">
                    <vbox>
                        <hbox>
                            <button id="createButton" action="ordersDataGrid.create"/>
                            <button id="editButton" action="ordersDataGrid.edit"/>
                            <button id="refreshButton" action="ordersDataGrid.refresh"/>
                            <button id="removeButton" action="ordersDataGrid.remove" visible="false"/>
                            <button id="removeAllButton" text="msg://remove.all"/>
                        </hbox>
                        <hbox>
                            <simplePagination id="pagination" visible="false"
                                              dataLoader="ordersDl"
                                              autoLoad="true"
                                              itemsPerPageUnlimitedItemVisible="true"
                                              itemsPerPageDefaultValue="1000"
                                              itemsPerPageVisible="false"/>
                        </hbox>
                    </vbox>
                </hbox>
                <dataGrid id="ordersDataGrid" pageSize="200" allRowsVisible="true"
                          width="100%"
                          minHeight="20em"
                          dataContainer="ordersDc"
                          columnReorderingAllowed="true"
                          selectionMode="SINGLE">
                    <actions>
                        <action id="create" type="list_create"/>
                        <action id="edit" type="list_edit"/>
                        <action id="refresh" type="list_refresh"/>
                        <action id="remove" type="list_remove"/>
                    </actions>
                    <columns resizable="true">
                        <column property="orderNumber"/>
                        <column property="status"/>
                        <column property="address"/>
                    </columns>
                </dataGrid>
                <hbox id="lookupActions" visible="false">
                    <button id="selectButton" action="selectAction"/>
                    <button id="discardButton" action="discardAction"/>
                </hbox>
            </vbox>
            <vbox id="mapBox" width="100%">
                <maps:geoMap id="map" height="100%" width="100%">
                    <maps:layers>
                        <maps:tile>
                            <maps:osmSource/>
                        </maps:tile>
                        <maps:vector id="ordersLayer">
                            <maps:dataVectorSource id="dataVectorSource"
                                                   dataContainer="ordersDc"
                                                   property="location"/>
                        </maps:vector>
                    </maps:layers>
                    <!-- Define the boundaries for Moscow -->
                    <maps:mapView centerY="55.7558"
                                  centerX="37.6173">
                        <maps:extent minX="37.3219"
                                     minY="55.4092"
                                     maxX="37.8925"
                                     maxY="55.9021"/>
                    </maps:mapView>
                </maps:geoMap>
            </vbox>
        </split>
    </layout>
</view>
