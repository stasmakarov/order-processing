<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://deliveryListView.title"
      focusComponent="deliveriesDataGrid">
    <data>
        <collection id="deliveriesDc"
                    class="com.company.orderprocessing.entity.Delivery">
            <fetchPlan extends="_base"/>
            <loader id="deliveriesDl" readOnly="true">
                <query>
                    <![CDATA[select e from ord_Delivery e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="readButton" action="deliveriesDataGrid.read"/>
            <simplePagination id="pagination" dataLoader="deliveriesDl"/>
        </hbox>
        <dataGrid id="deliveriesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="deliveriesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="read" type="list_read"/>
            </actions>
            <columns resizable="true">
                <column property="number"/>
                <column property="timestamp"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
